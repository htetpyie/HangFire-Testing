<script>

$(document).ready(function(){
    SetCountData()
})

 function loadPage(url){
     $('#blogTable').load(url);
  }
  
function SetCountData(){
    
    $.ajax({
       url: "/Blog/GetCronCount",
       type: "Get",
       dataType: "json",
       success: function (result) {
           $('#runningCrons').html(result.runningCrons)
           $('#stoppedCrons').html(result.stoppedCrons)
       },
       error: function (err) {
           console.error(err);
       }
   });
   
}
</script>
